# =============================================================================
# Amplify Marketing OS - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values.
# Never commit .env.local or .env â€” they are gitignored.

# -----------------------------------------------------------------------------
# Supabase
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Stripe
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_MONTHLY=price_...
STRIPE_PRICE_ID_YEARLY=price_...

# -----------------------------------------------------------------------------
# Google Gemini AI
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key

# -----------------------------------------------------------------------------
# Google Analytics (GA4)
# -----------------------------------------------------------------------------
# The GA4 measurement ID. Analytics will not load if this is unset.
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# Cloudflare Turnstile (bot protection)
# -----------------------------------------------------------------------------
# Public site key (used in the browser widget)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAA...
# Secret key (used server-side to verify tokens)
TURNSTILE_SECRET_KEY=0x4AAAAAA...

# -----------------------------------------------------------------------------
# Site / App URLs
# -----------------------------------------------------------------------------
# The canonical public URL of the site (used for allowed-origins, email redirects)
NEXT_PUBLIC_SITE_URL=https://amplify.fabricacollective.com
# The app URL used for Stripe return URLs and auth redirects
NEXT_PUBLIC_APP_URL=https://amplify.fabricacollective.com
